# Trading Platform Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Environment (development, testing, staging, production)
TRADING_ENV=development

# Database Configuration
# For development, using local PostgreSQL
TRADING_DB_PASSWORD=your_password_here

# For production (multiple database support)
PROD_DB_HOST=prod-db-server.example.com
PROD_DB_USER=trading_app
PROD_DB_PASSWORD=secure_password_here

# Individual database passwords (if different)
TRADING_DB_TECHNICALS_PASSWORD=
TRADING_DB_INTERNALS_PASSWORD=
TRADING_DB_FUNDAMENTALS_PASSWORD=
TRADING_DB_MACRO_PASSWORD=
TRADING_DB_PLURALITY_PASSWORD=
TRADING_DB_BACKTESTING_PASSWORD=

# IQFeed Configuration
IQFEED_USERNAME=your_iqfeed_username
IQFEED_PASSWORD=your_iqfeed_password
IQFEED_PRODUCT_ID=your_product_id

# Alpha Vantage API
ALPHAVANTAGE_API_KEY=your_alpha_vantage_key

# Security
TRADING_SECRET_KEY=your-secret-key-here-change-in-production

# Feature Flags (true/false)
TRADING_FEATURES_REAL_TIME_ALERTS=false
TRADING_FEATURES_BACKTESTING=true
TRADING_FEATURES_PAPER_TRADING=false

# Logging
TRADING_LOGGING_LEVEL=INFO
TRADING_LOGGING_FILE_ENABLED=true
TRADING_LOGGING_FILE_PATH=logs/trading_platform.log

# Performance
TRADING_PERFORMANCE_CACHE_ENABLED=true
TRADING_PERFORMANCE_CACHE_TTL=300
TRADING_PERFORMANCE_THREADING_MAX_WORKERS=10

# API Settings
TRADING_APIS_REST_ENABLED=false
TRADING_APIS_REST_PORT=8000
TRADING_APIS_WEBSOCKET_ENABLED=false
TRADING_APIS_WEBSOCKET_PORT=8001

# Monitoring
TRADING_MONITORING_METRICS_ENABLED=false
TRADING_MONITORING_HEALTH_CHECK_ENABLED=true